<h1>Advanced Search</h1>

<%= form_for @search do |f| %>
    <div class="field">
        <%= f.label :skills %><br>
        <%= f.text_field :keywords %>
    </div>
    <div class="field">
        <%= f.label :min_price, "Price Range in Dollars" %><br>
        <%= f.number_field :min_price, size: 10 %>
        <%= f.number_field :max_price, size: 10 %>
    </div>
    <div class="actions"><%= f.submit "Search" %></div>
<% end %>

