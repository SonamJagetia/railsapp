<%= form_for @booking do |f| %>

  <%= f.hidden_field(:mentor_id, value: 5) %>
  <%= f.hidden_field(:mentee_id, value: current_user.id) %>
  <%= f.hidden_field(:price, value: 100) %>
  <div class="field form-group">
      <%= f.label :'Booking date and time:' %><br />
      <%= f.datetime_select :start_time, class: "form-control", autofocus: true, placeholder: "Re-enter password" %>
  </div> <br>

  <div class="actions">
      <%= f.submit "Book Session", class: "btn btn-light" %>
  </div>

<% end %>