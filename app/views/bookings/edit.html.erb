<h1>Edit Booking</h1>

<%= form_for @booking do |f| %>

  <%= f.hidden_field(:mentor_id, value: @booking.mentor_id) %>
  <%= f.hidden_field(:price, value: @booking.price) %>
  <div class="field form-group">
      <%= f.label :'Booking date and time' %><br />
      <%= f.datetime_select :start_time, class: "form-control", autofocus: true %>
  </div> <br>

  <div class="actions">
      <%= f.submit "Update Session", class: "btn btn-primary" %>
  </div>

<% end %>