<!-- Page Content -->
<div class="container mt-4">
  
    <!-- Page Content -->

<%= image_tag("startup-594090_1920.jpg", class: "bg", alt: "") %>

    <div class="container mt-5 mb-5">

    <div class="row justify-content-center">

    <div class="col-md-6">

    <div class="card pl-5 pr-5 pt-5 pb-5">


<div class="container">
  <h2 class="card-title pink">Edit <%= resource_name.to_s.humanize %></h2>

  <hr>

  <h3><%= notice %></h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter new email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field form-group">
      <%= f.label :'New password' %> <br />
      <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Enter new password" %>
      <% if @minimum_password_length %>
        <small id="emailHelp" class="form-text text-muted"> <%= @minimum_password_length %> characters minimum (leave blank if you don't want to change it)</small>
      <% end %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "Re-enter new password" %>
    </div>

    <div class="field form-group">
      <%= f.label :'username' %><br />
      <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Enter new username" %>
    </div>

    <div class="field">
      <%= f.label :'Avatar' %><br />
      <%= f.file_field :avatar %>
    </div> <br>

    <div class="field form-group">
      <%= f.label :purpose %><br />
      <%= f.text_area :purpose, autofocus: true, class: "form-control", placeholder: "I'm looking for technical mentorship from a JavaScript expert!" %>
    </div>

    <div class="field form-group">
      <%= f.label :'About Me' %><br />
      <%= f.text_area :about_me, autofocus: true, class: "form-control", placeholder: "I'm a freelance web designer currently self-learning Javascript online." %>
    </div>

    <div class="field form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autofocus: true, class: "form-control", placeholder: "Current password" %>
        <small id="emailHelp" class="form-text text-muted"> We need your current password to confirm your changes</small>
    </div>

    <div>
      <%= check_box_tag(:mentor) %>
      <%= label_tag(:mentor, "I want to mentor") %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <br>
  <hr>

  <h3>Cancel My Account</h3>

  <%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>

  <hr>
  <br>

  <%= link_to "Back", :back, class: "btn btn-primary" %>
</div>
</div>
</div>
</div>
</div>
</div>

