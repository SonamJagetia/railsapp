<h2>Sign up</h2>

<hr>

<h6>Find a mentor or mentee</h6>

<form>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :'Email Address*' %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Enter email", autocomplete: "email" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="field form-group">
    <%= f.label :'Password*' %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autofocus: true, placeholder: "Enter password" %>
    <small id="emailHelp" class="form-text text-muted"> <%= @minimum_password_length %> characters minimum</small>
  </div>

  <div class="field form-group">
    <%= f.label :'password_confirmation*' %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autofocus: true, placeholder: "Re-enter password" %>
  </div> <br>

  <div class="field form-group">
    <%= f.label :'username*' %><br />
    <%= f.text_field :username, class: "form-control", autofocus: true, placeholder: "Enter Username"%>
  </div>

  <div class="field form-group">
    <%= f.label :'Avatar' %><br />
    <%= f.file_field class: "form-label", autofocus: true, placeholder: "Choose File" %>
  </div>

  <div class="field form-group">
    <%= f.label :purpose %><br />
    <%= f.text_area :purpose, class: "form-control", autofocus: true, placeholder: "I'm looking for technical mentorship from a Javascript expert!" %>
  </div>

  <div class="field form-group">
    <%= f.label :'About Me' %><br />
    <%= f.text_area :about_me, class: "form-control", autofocus: true, placeholder: "I'm a freelance web designer currently self-learning Javascript online." %>
  </div>

  <div class="form-group">
    <%= check_box_tag(:mentor) %>
    <%= label_tag(:mentor, "I want to mentor") %>
  </div>

  <small>
    * Required fields
  </small>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<small>Already have a MentorMe account?</small>
<%= render "devise/shared/links" %>
</form>