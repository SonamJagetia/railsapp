<%= form_with(model: mentor, local: true) do |form| %>
  <% if mentor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mentor.errors.count, "error") %> prohibited this mentor from being saved:</h2>

      <ul>
      <% mentor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.label :skills %>
    <%= form.text_field :skills %>
  </div>

  <div class="field">
    <%= form.label :availability %>
    <%= form.text_area :availability %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, value: number_with_precision((mentor.price||0)/100.0, :precision => 2) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
